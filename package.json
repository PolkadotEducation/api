    "@polkadot-labs/hdkd-helpers": "^0.0.25",
    "@polkadot/util-crypto": "^13.3.1",
    "@sentry/cli": "^2.50.2",
    "@sentry/node": "^10.1.0",
    "@typegoose/typegoose": "^12.3.1",
    "axios": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.6.4",
    "node-cron": "^3.0.3"
  },
  "module": "src/index.js",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.1.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.7",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "tsx": "^4.7.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.7.0"
  }
}
